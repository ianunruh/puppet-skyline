description "skyline-webapp"

start on virtual-filesystems
stop on runlevel [06]

respawn
respawn limit 5 10

console log

pre-start script
  mkdir -p <%= @pid_path %>
  chown <%= @user %> <%= @pid_path %>
end script

exec start-stop-daemon --start -c <%= @user %> --exec <%= @app_path %>/bin/webapp.d run
